{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Raylib Project",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "-o",
        "main.exe",
        "-I",
        "C:/raylib/include",
        "-L",
        "C:/raylib/lib",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}