{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build WeatherRaylibApp",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-IC:/msys64/mingw64/include",
        "-IC:/raylib/include",
        "build/main.cpp",
        "-LC:/msys64/mingw64/lib",
        "-LC:/raylib/lib",
        "-lcurl",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm",
        "-o",
        "build/main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
